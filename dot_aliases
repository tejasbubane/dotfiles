# Listing and navigation
alias ls='gls --color=tty'
alias l='ls -lah'

# Git
alias g='git'
alias ga='git add'
alias gb='git branch'
alias gc='git commit -v'
alias gc!='git commit -v --amend'
alias gf='git fetch'
alias gp='git push'
alias gd='git diff'
alias gdc='git diff --cached'
alias gmff='git merge --ff-only'
alias gmnff='git merge --no-ff'
alias gco='git co'
alias gfu='gco master && gf upstream && gmff upstream/master && git push origin master'
alias gm='git merge'
alias gr='git remote -v'
alias gst='git status'
alias ghh='git help'
alias gl='git log'
alias glb='git logb'

# Mysql
# No need of password for mysql each time
alias mysqla='mysql -uroot -proot12345'
alias mysqldumpa='mysqldump -uroot -proot12345'

# bundle install in vendor
# taken from : http://ryan.mcgeary.org/2011/02/09/vendor-everything-still-applies/
alias b="bundle"
alias bi="b install --path vendor"
alias bil="bi --local"
alias bu="b update"
alias be="b exec"
alias binit="bi && b package && echo 'vendor/ruby' >> .gitignore"

# Rails
alias r="bin/rails"
alias rc="bin/rails console"
alias rs="bin/rails server"
alias rsp="bin/rspec"

# rvm
alias rvmc="rvm current"

# zsh
alias zshconfig="emacsclient ~/.zshrc"
alias ohmyzsh="emacsclient ~/.oh-my-zsh"

# emacs
if [[ `uname` == 'Darwin' ]]
then
  alias emacs="/Applications/Emacs.app/Contents/MacOS/Emacs"
  alias emacsclient="/Applications/Emacs.app/Contents/MacOS/bin/emacsclient"
else
  alias emacs="/usr/local/bin/emacs"
  alias emacsclient="/usr/local/bin/emacsclient"
fi
alias ec="emacsclient"

# ping check
alias google="ping www.google.co.in"

# Download youtube videos in standard 720p format and continue from where left
alias youtube="youtube-dl -f22 -c"

# cat the ssh public key
alias sshkey="cat ~/.ssh/id_rsa.pub"

# yarn
# Remove after this PR gets merged: https://github.com/robbyrussell/oh-my-zsh/pull/5722
alias ya="yarn add"
alias yad="yarn add --dev"
alias yins="yarn install"
alias yls="yarn ls"
alias yrm="yarn rm"
alias yrun="yarn run"
alias yt="yarn test"
alias yup="yarn upgrade"
alias yw="yarn run webpack"
alias ywp="yarn run webpack:production"

# should be defined in package.json
alias yw="yarn watch"
alias yb="yarn build"

# NPM aliases
alias npmlg="npm list -g --depth=0"
alias npmr="npm run"
alias npmt="npm test"
alias npmw="npm run watch"
alias npmi="npm install"

# Frequently used directories
alias work="cd ~/work"
alias oss="cd ~/opensource"

# Random
alias ag="command ag"
alias x="chmod u+x"
