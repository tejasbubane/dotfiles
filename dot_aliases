
# Git
alias gf='git fetch'
alias gdc='git diff --cached'
alias gmff='git merge --ff-only'
alias gmnff='git merge --no-ff'
alias gfu='gco master && gf upstream && gmff upstream/master && gp origin master'

# Mysql
# No need of password for mysql each time
alias mysqla='mysql -uroot -proot12345'
alias mysqldumpa='mysqldump -uroot -proot12345'

# bundle install in vendor
# taken from : http://ryan.mcgeary.org/2011/02/09/vendor-everything-still-applies/
alias b="bundle"
alias bi="b install --path vendor"
alias bil="bi --local"
alias bu="b update"
alias be="b exec"
alias binit="bi && b package && echo 'vendor/ruby' >> .gitignore"

# Rails
alias r="rails"

# rvm
alias rvmc="rvm current"

# zsh
alias zshconfig="emacsclient ~/.zshrc"
alias ohmyzsh="emacsclient ~/.oh-my-zsh"

# emacs
if [[ `uname` == 'Darwin' ]]
then
  alias emacs="/Applications/Emacs.app/Contents/MacOS/Emacs"
  alias emacsclient="/Applications/Emacs.app/Contents/MacOS/bin/emacsclient"
else
  alias emacs="/usr/local/bin/emacs"
  alias emacsclient="/usr/local/bin/emacsclient"
fi

alias ec="emacsclient"

# ping check
alias google="ping www.google.co.in"

# cat the ssh public key
alias sshkey="cat ~/.ssh/id_rsa.pub"

alias ag="command ag"

# yarn
alias ya="yarn add"
alias yad="yarn add --dev"
alias yins="yarn install"
alias yls="yarn ls"
alias yrm="yarn rm"
alias yrun="yarn run"
alias yt="yarn test"
alias yup="yarn upgrade"
alias yw="yarn run webpack"
alias ywp="yarn run webpack:production"
