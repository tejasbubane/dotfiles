# Zim config
source "$HOME/.zim_preload"

# My own aliases
source "$HOME/.aliases"

export GPG_TTY=$(tty)

# Set encoding - required by some rake commands
export LC_ALL="en_US.UTF-8"

source /usr/local/share/zsh-autosuggestions/zsh-autosuggestions.zsh

export TERM=xterm-256color

export PATH="$PATH:/usr/local/bin"

export PATH="$PATH:$HOME/bin" # Add home bin path

# Haskell stack binaries
export PATH="$PATH:$HOME/.local/bin"

# Homebrew needs sbin
export PATH="$PATH:/usr/local/sbin"

# MIT Scheme (for SICP)
export PATH="$PATH:/Applications/mit-scheme.app/Contents/Resources/"

# Required for postgres
export PATH="/usr/local/opt/icu4c/bin:$PATH"
export PATH="/usr/local/opt/icu4c/sbin:$PATH"
export LDFLAGS="-L/usr/local/opt/icu4c/lib"
export CPPFLAGS="-I/usr/local/opt/icu4c/include"
export PKG_CONFIG_PATH="/usr/local/opt/icu4c/lib/pkgconfig"

# React Native - Android Studio
export ANDROID_HOME=$HOME/Library/Android/sdk
export PATH=$PATH:$ANDROID_HOME/emulator
export PATH=$PATH:$ANDROID_HOME/tools
export PATH=$PATH:$ANDROID_HOME/tools/bin
export PATH=$PATH:$ANDROID_HOME/platform-tools

# Yarn
export PATH="$HOME/.yarn/bin:$HOME/.config/yarn/global/node_modules/.bin:$PATH"

export SWIVM_DIR="/Users/tejas.bubane/.swivm"
[ -s "$SWIVM_DIR/swivm.sh" ] && . "$SWIVM_DIR/swivm.sh"  # This loads swivm

export PATH="$HOME/.yarn/bin:$HOME/.config/yarn/global/node_modules/.bin:$PATH"

# fnm
eval "$(fnm env --multi)"

# Add RVM to PATH for scripting. Make sure this is the last PATH variable change.
export PATH="$PATH:$HOME/.rvm/bin"

# GHC Haskell
[ -f "${GHCUP_INSTALL_BASE_PREFIX:=$HOME}/.ghcup/env" ] && source "${GHCUP_INSTALL_BASE_PREFIX:=$HOME}/.ghcup/env"
export PATH="/usr/local/opt/libarchive/bin:$PATH"
export PATH="/usr/local/opt/postgresql@11/bin:$PATH"

# Cargo Rust
export PATH="$HOME/.cargo/bin:$PATH"
