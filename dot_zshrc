## EXPORT PATH ##

export PATH=$PATH:/usr/local/bin

export RSENSE_HOME=/opt/rsense-0.3/
export PATH="$HOME/.cask/bin:$PATH"

export PATH="$HOME/intellij_studio/bin:$PATH"

export PATH="/home/tech-6/.cask/bin:$PATH"

export GOROOT="$HOME/go"
export PATH="$PATH:$GOROOT/bin"

export PATH="$PATH:$HOME/.rvm/bin" # Add RVM to PATH for scripting
export PATH="$PATH:$HOME/bin" # Add home bin path


## ALIASES ##

# 1. SSH Jive Servers
alias atd1='ssh jive@atd1.spinr.in'
alias atd2='ssh jive@atd2.spinr.in'
alias atd3='ssh jive@atd3.spinr.in'
alias atd4='ssh jive@atd4.spinr.in'
alias atd5='ssh jive@atd5.spinr.in'
alias atd6='ssh jive@atd6.spinr.in'
alias atd7='ssh jive@atd7.spinr.in'
alias atd8='ssh jive@atd8.spinr.in'
alias atd9='ssh jive@atd9.spinr.in'
alias atd10='ssh jive@atd10.spinr.in'
alias atd11='ssh jive@atd11.spinr.in'

alias reporting='ssh jive@atd11.spinr.in'

# 2. SAFE and REPO Servers
alias safe='ssh jive@safe.spinr.in'
alias repo='ssh jive@repo.spinr.in'

# 3. New ubuntu Servers
alias payment='ssh ubuntu@payments.spinr.in'
alias payments='ssh ubuntu@payments.spinr.in'
alias cs='ssh ubuntu@customerservice.spinr.in'
alias marketing='ssh ubuntu@marketing.spinr.in'

# 4. No need of password for mysql each time
alias mysqla='mysql -uroot -proot'
alias mysqldumpa='mysqldump -uroot -proot'

# 5. bundle install in vendor
# taken from : http://ryan.mcgeary.org/2011/02/09/vendor-everything-still-applies/
alias b="bundle"
alias bi="b install --path vendor"
alias bil="bi --local"
alias bu="b update"
alias be="b exec"
alias binit="bi && b package && echo 'vendor/ruby' >> .gitignore"

# 6. Git aliases
alias gdiffw="git diff --word-diff"
alias gdiffc="git diff --cached"

# 7. Rails aliases
alias r="rails"

## UTILITIES ##

# Always use rebase while git pull
git() { if [[ $@ == "pull" ]]; then command git pull --rebase; else command git "$@"; fi; }
